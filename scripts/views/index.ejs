    <div class="form-container">
        <h1>All Posts</h1>
        <a href="/new" class="button">Create New Post</a>
        <div class="posts-list">
            <% if (posts.length> 0) { %>
                <% posts.forEach(function(post) { %>
                    <div class="post-card">
                        <h2>
                            <%= post.title %>
                        </h2>
                        <p class="post-date">
                            Posted on <%= post.createdAt.toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                                day: 'numeric' }) %> at <%= post.createdAt.toLocaleTimeString('en-US', { hour: '2-digit'
                                    , minute: '2-digit' }) %>
                        </p>
                        <p>
                            <%= post.content %>
                        </p>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No posts yet. Why not create one?</p>
                            <% } %>
        </div>
    </div>
